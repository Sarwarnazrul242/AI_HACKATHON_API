<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subjects"
            android:layout_marginTop="16dp"
            android:textColor="#5C98d2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which subject can I assist you with?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- Dropdown/Search Bar -->
        <AutoCompleteTextView
            android:id="@+id/subjectSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Subject:"
            android:layout_marginTop="16dp"
            android:dropDownHeight="150dp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="@color/white"
            android:backgroundTint="#5C98d2"
            android:background="@drawable/roundstyle"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:text="Disclaimer: this service cannot truly replace a real human health professional and educational expert"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center_horizontal"/>

        <!-- Copyright Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Copyright (c) 2023"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center_horizontal"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>